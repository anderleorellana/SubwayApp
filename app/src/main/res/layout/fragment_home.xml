                        android:layout_height="match_parent"
                        tools:itemCount="5"
                        tools:listitem="@layout/list_items"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
